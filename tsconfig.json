{
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"noResolve": false,
		"jsx": "react",
		"reactNamespace": "RX",
		"module": "commonjs",
		"target": "es5",
		"experimentalDecorators": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"types": [
			"node"
		],
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"baseUrl": "src"
	},
	"include": [
		"./src/**/*"
	]
}